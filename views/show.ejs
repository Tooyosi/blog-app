<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image  %>" alt="">
            <div class="content">
                <span class="postDate">Posted: <%= blog.created.toDateString()  %></span>
            </div>
            <div class="description">
                <p><%- blog.body  %></p>
            </div>
        </div>
        <a class="ui violet basic button" href="/blogs/<%= blog._id %>/edit">Edit Post</a>
        <form action="/blogs/<%= blog.id %>?_method=DELETE" method="POST" style="display: inline-block">
            <button class="ui red basic button" type="submit">Delete Post</button>
        </form>
    </div>
</div>
<% include partials/footer %>